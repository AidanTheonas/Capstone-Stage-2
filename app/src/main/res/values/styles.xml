<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorTextIcons</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/transition</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme">
        <item name="android:editTextColor">@color/colorTextIcons</item>
        <item name="android:textColorHint">@color/colorTextIcons</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_contents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="width_match_height_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="height_match_width_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="titleTextColor">@color/colorTextIcons</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="tab_shows_style" parent="width_match_height_wrap">
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorTextIcons</item>
        <item name="tabIndicatorHeight">@dimen/tab_shows_indicator_height</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="latest_episodes_card_style" parent="width_match_height_wrap">
        <item name="android:layout_margin">@dimen/latest_episodes_card_layout_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/latest_episodes_card_corner_radius</item>
    </style>

    <style name="iv_show_episode_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/imageViewPlaceholderColor</item>
    </style>

    <style name="tv_episode_title_style" parent="width_match_height_wrap">
        <item name="android:paddingRight">@dimen/tv_episode_title_margin</item>
        <item name="android:paddingLeft">@dimen/tv_episode_title_margin</item>
        <item name="android:paddingTop">@dimen/tv_episode_title_margin</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/tv_episode_title_text_size</item>
    </style>

    <style name="tv_episode_sub_title_style" parent="width_match_height_wrap">
        <item name="android:padding">@dimen/tv_episode_sub_title_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/tv_episode_sub_title_text_size</item>
    </style>

    <style name="sv_search_episodes" parent="width_match_height_wrap">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@color/colorTransparent</item>
    </style>

    <style name="search_toolbar_style" parent="main_toolbar_style">
        <item name="contentInsetLeft">@dimen/search_toolbar_inset</item>
        <item name="contentInsetStart">@dimen/search_toolbar_inset</item>
        <item name="contentInsetStartWithNavigation">@dimen/search_toolbar_inset</item>
    </style>

    <style name="iv_app_logo_main_toolbar_style" parent="wrap_contents">
       <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_accent_dfm_logo</item>
    </style>

    <style name="tv_app_description_main_toolbar" parent="height_match_width_wrap">
        <item name="android:text">@string/eepfm_radio</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">@dimen/tv_app_description_main_toolbar_padding_bottom</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">@dimen/tv_app_description_main_toolbar_text_size</item>
    </style>

    <style name="player_layout" parent="match_parent">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">ltr</item>
        <item name="android:background">@color/colorPrimaryTransparent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="player_buttons_layout" parent="width_match_height_wrap">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="time_bar_layout" parent="width_match_height_wrap">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="exo_position_duration" parent="wrap_contents">
        <item name="android:textSize">@dimen/exo_position_duration_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/exo_position_duration_padding</item>
        <item name="android:paddingRight">@dimen/exo_position_duration_padding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="exo_actions_layout" parent="width_match_height_wrap">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="exo_back_button_style" parent="wrap_contents">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:src">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:padding">@dimen/exo_action_buttons_padding</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="pv_episode_style">
        <item name="resize_mode">fixed_height</item>
        <item name="use_artwork">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>
