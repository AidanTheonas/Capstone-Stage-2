<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_episode"
    style="@style/search_episodes_card_style"
    tools:targetApi="lollipop">

    <android.support.constraint.ConstraintLayout
        style="@style/width_match_height_wrap"
        android:orientation="vertical">

        <android.support.constraint.Guideline
            android:id="@+id/iv_hz_guideline"
            style="@style/wrap_contents"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />

        <ImageView
            android:id="@+id/iv_show_episode"
            style="@style/iv_show_episode_search_style"
            android:contentDescription="@string/episode_thumbnail" />

        <android.support.constraint.Guideline
            android:id="@+id/iv_vt_guideline"
            style="@style/wrap_contents"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30" />


        <TextView
            android:id="@+id/tv_episode_title"
            style="@style/tv_episode_title_search_style"
            tools:text="This is some title for this card" />

        <android.support.constraint.Guideline
            android:id="@+id/tv_hz_guideline"
            style="@style/wrap_contents"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tv_episode_subtitle"
            style="@style/tv_episode_sub_title_search_style"
            tools:text="This is some subtitle for this card" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>