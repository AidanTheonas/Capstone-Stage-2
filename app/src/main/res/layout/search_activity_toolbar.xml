<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/width_match_height_wrap">

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        style="@style/search_toolbar_style">

        <FrameLayout style="@style/width_match_height_wrap">

            <android.support.v7.widget.SearchView
                android:id="@+id/sv_search_episodes"
                style="@style/sv_search_episodes" />

            <ImageView
                android:id="@+id/iv_back_btn"
                style="@style/custom_back_button"
                android:contentDescription="@string/go_to_previous_activity"
                android:src="@drawable/ic_arrow_back_white_24dp" />
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>