<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
        android:id="@+id/exo_content_frame"
        style="@style/match_parent"
        android:layout_gravity="center">

        <View
            android:id="@+id/exo_shutter"
            style="@style/match_parent"
            android:background="@color/colorBlack" />

        <tz.co.dfm.dfmradio.Ui.CustomViews.ShowEpisodeImageView
            android:id="@+id/exo_thumbnail"
            style="@style/match_parent"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/episode_thumbnail"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/exo_buffering"
            style="@style/wrap_contents"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/loading_drawable"
            android:visibility="gone" />

    </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

    <FrameLayout
        android:id="@+id/exo_overlay"
        style="@style/match_parent" />

    <View
        android:id="@+id/exo_controller_placeholder"
        style="@style/match_parent" />

</merge>