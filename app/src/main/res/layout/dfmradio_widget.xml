<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/width_match_height_wrap"
    android:id="@+id/rl_widget_view"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/iv_widget_episode_thumbnail"
        style="@style/iv_widget_episode_thumbnail_style"
        android:contentDescription="@string/episode_thumbnail"/>

    <TextView
        android:id="@+id/tv_widget_episode_title"
        tools:text="Episode title here"
        style="@style/tv_widget_episode_title_style" />

    <TextView
        android:id="@+id/tv_widget_episode_sub_title"
        tools:text="Episode title here"
        style="@style/tv_widget_episode_sub_title_style" />

    <TextView
        style="@style/horizontal_separator"
        android:layout_below="@+id/tv_widget_episode_sub_title"/>

</RelativeLayout>